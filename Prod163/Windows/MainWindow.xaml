<Window x:Class="Prod163.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prod163"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="stak" >
            <TextBlock x:Name="tbpriv" 
                 HorizontalAlignment="Center" 
                 FontSize="20"
                 Height="25"
                 VerticalAlignment="Top"/>
            <Button x:Name="btnProd"
                    Width="250"
                    Height="25"
                    Content="Продукт"
                    Margin=" 0 80 0 0 " Click="btnProd_Click"
                    />
            <Button x:Name="btnEmp"
                    Content="Работники"
                     Width="250"
                    Margin="0 30 0 0"
                    Height="25" Click="btnEmp_Click"
                    
                    />
            <Button x:Name="btnOrd"
                    Content="Заказы"
                     Width="250"
                    Margin="0 30 0 0"
                    Height="25" Click="btnOrd_Click"
                    
                    />






        </StackPanel>
       


    </Grid>
</Window>
