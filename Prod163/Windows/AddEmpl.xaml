<Window x:Class="Prod163.Windows.AddEmpl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prod163.Windows"
        mc:Ignorable="d"
        Title="AddEmpl" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" >
            <TextBlock Text="добавление" FontSize="25"/>
            <TextBox x:Name="tbFname" 
                     Margin="0 10 0 0"/>
            <TextBox x:Name="tbLname" 
                     Margin="0 10 0 0"/>
            <TextBox x:Name="tbPatrname" 
                     Margin="0 10 0 0"/>
            <TextBox x:Name="tbLogin" 
                     Margin="0 10 0 0"/>
            <TextBox x:Name="tbPass" 
                     Margin="0 10 0 0"/>
            <ComboBox x:Name="cmPost" Margin="0 10 0 0" />


        </StackPanel>



        <DatePicker  x:Name="data" Width="100"
                     Height="50"
                     Margin="80 230 80 0"
            />
        <Button x:Name="btnVhod"
                Height="25"
                Width="150"
                 Margin="0 350 0 0 "
                 Content="Добавить" Click="btnVhod_Click" 
             
                
                />


    </Grid>
</Window>
